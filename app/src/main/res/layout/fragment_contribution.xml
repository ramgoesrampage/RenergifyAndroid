<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".ContributionFragment">

    <ScrollView
        android:id="@+id/quiz_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/purple">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="80dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Buy assets"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"
                android:textColor="@color/black"/>

            <!-- First Asset Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/curved_background"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/assetImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/renewableenergy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/assetTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cameron Sky"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/assetLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cameron Highlands, Malaysia"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/assetProduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1690 kW - 1960 kW/year"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/assetSaved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RM 269 /kW"
                        android:paddingTop="2dp" />

                    <TextView
                        android:id="@+id/assetDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2025-03-12"
                        android:textColor="#999999"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/aboutButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About"
                        android:textColor="#000000"
                        android:background="@color/purple" />

                    <Button
                        android:id="@+id/buyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buy"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="#800080"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second Asset Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/curved_background"
                android:clipToOutline="true">

                <ImageView
                    android:id="@+id/assetImage2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/renergify" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/assetTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Renergify"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/assetLocation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bangkok, Thailand"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/assetProduction2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1920 kW - 2450 kW/year"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/assetSaved2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RM 59 /kW"
                        android:paddingTop="2dp" />

                    <TextView
                        android:id="@+id/assetDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2025-03-12"
                        android:textColor="#999999"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/aboutButton2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About"
                        android:textColor="#000000"
                        android:background="@color/purple" />

                    <Button
                        android:id="@+id/buyButton2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buy"
                        android:layout_marginStart="12dp"
                        android:backgroundTint="#800080"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
